extends partials/templates/_template.pug
include partials/components/_footer.pug

block content
  +b.SECTION.page--services

    // Services promo
    +b.SECTION.services-promo.promo

      // Breadcrumbs
      +b.breadcrumbs
        .container
          a(href="index.html") Главная
          =' /'
          span Услуги компании

      // Services promo info
      +b.SECTION.services-promo-info
        .container
          +e.H1.title Услуги компании
          +e.text Компания «Техника Топлива» представляет услуги для компаний энергетического комплекса: АЗС и ТРК. Индивидуальная комплектация заказов для поставок на предприятия и АЗС.

    // Services
    +b.SECTION.services
      .container
        +e.list
          +b.ARTICLE.service
            +e.H3.title Ремонт отрывных муфт
            +e.text-wrapper
              +e.img
                img(src="img/service1.png", alt="service 1")
              +e.text Компания «Техника Топлива» представляет возможность для ремонта отрывных муфт после активной эксплуатации.
              +e.btn-wrapper
                +b.A.btn(href="page-services-single.html") Узнать больше
          +b.ARTICLE.service
            +e.H3.title Брендирование изделий под Заказчика
            +e.text-wrapper
              +e.img
                img(src="img/service2.png", alt="service 2")
              +e.text Услуги по нанесению логотипа компании и другой служебной информации на металлические части корпуса отрывных муфт.
              +e.btn-wrapper
                +b.A.btn(href="page-services-single.html") Узнать больше
          +b.ARTICLE.service
            +e.H3.title Срочные поставки комплектующих для АЗС
            +e.text-wrapper
              +e.img
                img(src="img/service1.png", alt="service 1")
              +e.text Возможность осуществления срочных поставок комплектующих для АЗС по индивидуальным заказам.
              +e.btn-wrapper
                +b.A.btn(href="page-services-single.html") Узнать больше

      // Footer
      +footer()





