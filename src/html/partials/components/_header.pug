include ../abstracts/bemto/bemto.pug

// Header
+b.HEADER.header
  +e.upper
    .container
      +e.wrapper
        +e.address
          // Address
          +b.address
            +e.text СПб, пр. Александровской фермы, д.29, литер Е.
            a(href="page-contacts.html", title="Переход на страницу контактов")
              span Смотреть на карте
        +e.logo
          // Logo
          +b.A.logo(href="index.html" title="Техника топлива")
            +e.IMG.img(src="img/svg/logotype.svg" alt="Техника топлива")
        +e.call
          // Call
          +b.call
            +e.free Бесплатный звонок по России
            a(href="tel:+78002501012", rel="nofollow", title="Телефон для связи")
              span 8 800 250 10 12

  +e.nav
    .container
      +b.NAV.nav
        +e.hamburger
          +b.A.hamburger(href="javascript:void(0);")
            span
            | Меню

        +e.UL.list
          +e.item--home
            a(href="index.html", title="Главная страница")
          +e.item--dropdown
            a(href="#") О компании
            +e.UL.sublist
              +e.subitem
                a(href="page-about.html") О компании
              +e.subitem
                a(href="page-news.html") Новости
          +e.item--active
            a(href="page-services.html") Услуги
          +e.item--dropdown
            a(href="#") Продукция
            +e.UL.sublist
              +e.subitem
                a(href="page-production.html") Продукция
              +e.subitem
                a(href="page-quality.html") Контроль качества
          +e.item--dropdown
            a(href="#") Технологии
            +e.UL.sublist
              +e.subitem
                a(href="page-technology.html") Технологии производства
              +e.subitem
                a(href="page-articles.html") Статьи
          +e.item
            a(href="page-equipment.html") Оборудование
          +e.item
            a(href="page-where-to-buy.html") Где купить
          +e.item
            a(href="page-contacts.html") Контакты



